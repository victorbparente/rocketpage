{% extends "layout.njk" %}

{% block head %}
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<title>Rocketseat | Courses</title>
{% endblock %}


{% block content %}
<div id="wrapper">
    <h1 class="courses">Courses</h1>

    <section class="cards">
        {% for item in items %}
            <div class="card" id="{{item.id}}">
                <img src="{{item.imgUrl}}" alt="{{item.id}}">
                <!-- <h1>Starter</h1> -->
                <div class="card_info">
                    <p class="module">Modules:</p>
                    <p class="value">{{item.modules}}</p>
                    <p class="price">Price:</p>
                    <p class="value">{{item.price}}</p>
                </div>
            </div>
        {% endfor %}
    </section>

</div>

<div class="modal-overlay" class="active">

    <div class="modal">
        <div class="close-modal">
            <i class="material-icons">close</i>
        </div>

        <div class="maximize-modal">
            <i class="material-icons" id="max-icon">check_box_outline_blank</i>
        </div>

        <div class="modal-content">
            <iframe src="" frameborder="0"></iframe>
        </div>
    </div>

</div>

<script src="/scripts.js"></script>
{% endblock %}